{
  "name": "@virtualidentityag/component--library",
  "private": true,
  "version": "0.0.1",
  "description": "VI Starter for a Stencil based Web Components Library",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "init": "node .scripts/init.js",
    "start": "node .scripts/check-results && stencil build --watch & npm run storybook",
    "build": "node .scripts/check-results && stencil build --es5 && npm run storybook:build",
    "storybook": "start-storybook -p 6006 -s ./dist",
    "storybook:build": "npm run test:generate-output && build-storybook -o www",
    "test": "stencil test --spec --e2e --coverage --coverageThreshold='{\"global\":{\"branches\":\"80\",\"functions\":\"80\",\"lines\":\"80\",\"statements\":\"80\"}}'",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test:screenshot": "stencil test --spec --e2e --screenshot",
    "test:generate-output": "stencil test --spec --e2e --json --outputFile=.jest-test-results.json",
    "generate": "npm run generate:component",
    "generate:component": "node .scripts/component.js",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:fix": "npm run lint:code:fix && npm run lint:style:fix",
    "lint:code": "eslint \"./**/*.ts\" \"./**/*.tsx\" \"./**/*.js\"",
    "lint:code:fix": "eslint \"./**/*.ts\" \"./**/*.tsx\" \"./**/*.js\" --fix",
    "lint:style": "stylelint \"./**/*.css\" \"./**/*.scss\"",
    "lint:style:fix": "stylelint \"./**/*.css\" \"./**/*.scss\" --fix",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@biotope/quality-gate": "2.0.0-rc.4",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@stencil/core": "1.17.3",
    "@stencil/router": "1.0.1",
    "@stencil/sass": "1.3.2",
    "@storybook/addon-a11y": "6.0.10",
    "@storybook/addon-actions": "6.0.10",
    "@storybook/addon-docs": "6.0.10",
    "@storybook/addon-jest": "6.0.10",
    "@storybook/addon-knobs": "6.0.10",
    "@storybook/addon-storysource": "6.0.10",
    "@storybook/addon-viewport": "6.0.10",
    "@storybook/addons": "6.0.10",
    "@storybook/cli": "6.0.10",
    "@storybook/html": "6.0.10",
    "@storybook/theming": "6.0.10",
    "@types/faker": "4.1.12",
    "@types/jest": "26.0.10",
    "@types/puppeteer": "3.0.1",
    "cz-conventional-changelog": "3.2.0",
    "faker": "4.1.0",
    "fs-extra": "9.0.1",
    "husky": "4.2.5",
    "inquirer": "7.3.3",
    "jest": "26.4.0",
    "jest-cli": "26.4.0",
    "lint-staged": "10.2.11",
    "puppeteer": "5.2.1",
    "replace": "1.2.0",
    "semantic-release": "17.1.1",
    "ts-loader": "8.0.2",
    "typescript": "3.9.7"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
