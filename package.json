{
  "name": "@virtualidentityag/component-library-template",
  "version": "1.6.0",
  "description": "VI Starter for a Stencil based Web Components Library",
  "engines": {
    "node": ">=12.10.0"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "collection": "./dist/collection/collection-manifest.json",
  "types": "./dist/types/components.d.ts",
  "scripts": {
    "init": "node .scripts/init.js",
    "start": "node .scripts/check-results && stencil build && npm run storybook",
    "build": "node .scripts/check-results && stencil build && npm run storybook:build",
    "storybook": "stencil build --watch & start-storybook -p 6006 -s ./dist",
    "storybook:build": "npm run test:generate-output && build-storybook -s ./dist",
    "test": "stencil test --spec --e2e --coverage --coverageThreshold='{\"global\":{\"branches\":\"80\",\"functions\":\"80\",\"lines\":\"80\",\"statements\":\"80\"}}'",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test:screenshot": "stencil test --spec --e2e --screenshot",
    "test:generate-output": "stencil test --spec --e2e --json --outputFile=.jest-test-results.json --passWithNoTests",
    "generate": "node .scripts/component",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:fix": "npm run lint:code:fix && npm run lint:style:fix",
    "lint:code": "eslint \"./**/*.ts\" \"./**/*.tsx\" \"./**/*.js\"",
    "lint:code:fix": "eslint \"./**/*.ts\" \"./**/*.tsx\" \"./**/*.js\" --fix",
    "lint:style": "stylelint \"./**/*.css\" \"./**/*.scss\"",
    "lint:style:fix": "stylelint \"./**/*.css\" \"./**/*.scss\" --fix",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@biotope/quality-gate": "2.0.0-rc.4",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@stencil/core": "~2.0.3",
    "@stencil/router": "1.0.1",
    "@stencil/sass": "1.3.2",
    "@storybook/addon-a11y": "~6.0",
    "@storybook/addon-actions": "~6.0",
    "@storybook/addon-docs": "~6.0",
    "@storybook/addon-jest": "~6.0",
    "@storybook/addon-knobs": "~6.0",
    "@storybook/addon-storysource": "~6.0",
    "@storybook/addon-viewport": "~6.0",
    "@storybook/addons": "~6.0",
    "@storybook/cli": "~6.0",
    "@storybook/html": "~6.0",
    "@storybook/theming": "~6.0",
    "@types/faker": "4.1.12",
    "@types/jest": "26.0.13",
    "@types/puppeteer": "3.0.1",
    "commitlint-config-cz": "0.13.2",
    "cz-customizable": "6.3.0",
    "faker": "5.1.0",
    "fs-extra": "9.0.1",
    "husky": "4.2.5",
    "inquirer": "7.3.3",
    "jest": "26.4.2",
    "jest-cli": "26.4.2",
    "js-beautify": "1.13.0",
    "lint-staged": "10.3.0",
    "node-sass-package-importer": "5.3.2",
    "normalize.css": "8.0.1",
    "package-name-regex": "^1.0.8",
    "puppeteer": "5.2.1",
    "replace": "1.2.0",
    "semantic-release": "17.1.1",
    "ts-loader": "8.0.3",
    "typescript": "4.0.2"
  },
  "dependencies": {},
  "config": {
    "cz-customizable": {
      "config": ".cz-config.js"
    },
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "tag": "latest"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      ["@semantic-release/commit-analyzer", {
        "preset": "angular",
        "releaseRules": [
          {"type": "feat*", "release": "minor"},
          {"type": "fix*", "release": "patch"}
        ]
      }],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
